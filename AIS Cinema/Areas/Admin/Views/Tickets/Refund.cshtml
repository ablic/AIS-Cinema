@model AIS_Cinema.Models.Ticket

@{
    ViewData["Title"] = "Возврат";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Возврат билета</h1>

<h3>Подтвердите обработку возврата билета пользователем</h3>
<div>
    <h4>Билет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RowNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RowNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeatNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerEmail)
        </dd>
    </dl>

    <form asp-action="Refund">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Подтвердить возврат" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
