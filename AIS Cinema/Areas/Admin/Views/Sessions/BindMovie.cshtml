@model AIS_Cinema.Areas.Admin.ViewModels.SessionMovieBinding

@{
    ViewData["Title"] = "Привязка фильма";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Привязка фильма к сеансу @Model.DateTimeStr</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BindMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @foreach (var movie in Model.Movies)
            {
                <div class="form-check">
                    <input type="radio" name="selectedMovieId" value="@movie.Id" class="form-check-input" @(movie.Id == Model.SelectedMovieId ? "checked" : "") />
                    <label class="form-check-label">@movie.Title</label>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}