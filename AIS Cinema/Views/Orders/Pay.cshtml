@model AIS_Cinema.Models.Payment

@{
    ViewData["Title"] = "Оплата";
}

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <span class="nav-link disabled">Выбор мест</span>
    </li>
    <li class="nav-item">
        <span class="nav-link disabled">Ввод почты</span>
    </li>
    <li class="nav-item">
        <span class="nav-link disabled">Проверка данных</span>
    </li>
    <li class="nav-item">
        <span class="nav-link active">Оплата</span>
    </li>
    <li class="nav-item">
        <span class="nav-link disabled">Подтверждение</span>
    </li>
</ul>

<h1 class="mt-5">Оплата билетов</h1>
<form asp-action="Pay" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="CardNumber"></label>
        <input asp-for="CardNumber" class="form-control" placeholder="Введите номер карты">
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CardHolder"></label>
        <input asp-for="CardHolder" class="form-control" placeholder="Введите имя владельца карты">
        <span asp-validation-for="CardHolder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpiryDate"></label>
        <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY">
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CVV"></label>
        <input asp-for="CVV" class="form-control" placeholder="Введите CVV">
        <span asp-validation-for="CVV" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Оплатить">
</form>