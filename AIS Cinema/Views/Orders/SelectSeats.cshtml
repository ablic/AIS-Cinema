@model AIS_Cinema.ViewModels.SeatSelection

@{
    ViewData["Title"] = "Выбор мест";
}

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <span class="nav-link actie">Выбор мест</span>
    </li>
    <li class="nav-item">
        <span class="nav-link disabled">Отправка билетов</span>
    </li>
    <li class="nav-item">
        <span class="nav-link disabled">Подтверждение покупки</span>
    </li>
</ul>

<form asp-action="SelectSeats">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-grid gap-2">

        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <div class="d-flex justify-content-between">
                @{
                    int rowNumber = i + 1;
                }
                @rowNumber
                <div class="d-flex justify-content-center gap-2">

                    @for (int j = 0; j < Model.Rows[i].Seats.Count; j++)
                    {
                        var seat = Model.Rows[i].Seats[j];
                        int seatNumber = j + 1;

                        if (seat.LeftGap > 0f)
                        {
                            <div style="width: @(seat.LeftGap * 25)px"></div>
                        }

                        <span class="d-inline-block"
                              tabindex="0"
                              data-bs-toggle="tooltip"
                              title="@(
                                    $"Ряд: {rowNumber}, Место: {seatNumber}\n" +
                                    $"Цена: {seat.Price} руб.")">

                            @if (seat.IsTaken)
                            {
                                @* <input type="hidden" asp-for="@Model[i][j].IsSelected" /> *@
                                <button type="button" class="btn btn-sm btn-danger disabled">
                                    @seatNumber
                                </button>
                            }
                            else
                            {
                                <input type="checkbox"
                                        name="selectedTicketIds"
                                        value="@seat.TicketId"
                                        @* asp-for="@Model[i][j].IsSelected" *@
                                        class="btn-check seat"
                                        id="btn-check-@(rowNumber + "-" + seatNumber)"
                                        autocomplete="off"
                                        data-price="@seat.Price">

                                <label for="btn-check-@(rowNumber + "-" + seatNumber)"
                                       class="btn btn-outline-success btn-sm">
                                    @seatNumber
                                </label>
                            }
                        </span>

                        if (seat.RightGap > 0f)
                        {
                            <div style="width: @(seat.RightGap * 25)px"></div>
                        }
                    }
                </div>
                @rowNumber
            </div>
        }
    </div>

    <div class="d-flex justify-content-between">
        <a asp-controller="Sessions" asp-action="Index">Назад к сеансам</a>
        <input type="submit" value="Продолжить" class="btn btn-primary" />
    </div>
</form>